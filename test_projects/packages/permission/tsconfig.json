{
  "extends": "@guolisec/ts-config/web.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./test/*"
      ]
    },
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "types": [
      "vite/client",
      "@guolisec/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.d.ts",
    "test/**/*.tsx",
    "test/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}