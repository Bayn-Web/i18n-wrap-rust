{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"dom",
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "bundler",
		"types": [
			"node"
		],
		"strict": true,
		"noUnusedLocals": true,
		"declaration": true,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"isolatedModules": true,
		"allowJs": true,
	},
	"include": [
		"src"
	]
}