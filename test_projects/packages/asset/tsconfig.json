{
  "extends": "@guolisec/ts-config/web.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    /* 项目 */
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./test/*"
      ]
    },
    "moduleResolution": "bundler",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "vite/client",
      "@guolisec/types"
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}